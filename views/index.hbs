
<div class="container my-5" id="record-block">
  <div class="container my-3" id="record-amount"> 
    <h1 class="text-center">amount: <span style="color:pink">1000</span></h1>
  </div>

  <div class="container my-3" id="record-filter">
    <select class="form-select" aria-label="Default select example">
      <option selected>Open this select menu</option>
      <option value="1">One</option>
      <option value="2">Two</option>
      <option value="3">Three</option>
    </select>
  </div>

  <div class="container my-3">
    <ul class="list-group" id="record-list">
      {{#each records}}
      <li class="list-group-item records">
        <div class="container d-flex align-items-center justify-content-between">
          <div class="record-detail d-flex align-items-center">
            <div class="record-img mx-3">
              {{this.category}}
            </div>
            <div class="record-text mx-3">
              <p class="my-1">{{this.name}}</p>
              <p class="my-1">{{this.date}}</p>
            </div>
          </div>
          <div class="record-amount ms-auto mx-3">
            {{this.amount}}
          </div>
          <div class="record-edit">
            <a href="/records/{{this._id}}/edit" class="btn btn-warning">編輯</a>
            <a href="" class="btn btn-danger">刪除</a>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
  <div class="container d-flex justify-content-center">
    <a href="/records/new" class="btn btn-primary btn-lg" id="create-new-button">
      <h3 class="m-auto">
        新增消費 
      </h3>
    </a>
  </div>
</div>




